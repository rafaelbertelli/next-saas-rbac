    "@prisma/client": "6.7.0",
    "@repo/auth": "workspace:*",
    "@repo/env": "workspace:*",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.14.0",
    "dotenv-cli": "^8.0.0",
    "install": "^0.13.0",
    "prisma": "^6.7.0",
    "tsx": "^4.19.3"
  },
  "eslintConfig": {
    "extends": [
      "@repo/eslint-config/base"
    ]
